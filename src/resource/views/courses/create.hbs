<div class="mt-4">
    <h3>Đăng VIDEO</h3>

    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên video</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="descript">Mô tả</label>
            <input type="text" class="form-control" id="descript" name="descript">
        </div>
        <div class="form-group">
            <label for="video">Video ID</label>
            <input type="text" class="form-control" id="video" name="video">
        </div>
        <button type="submit" class="btn btn-primary mt-4">Thêm</button>
    </form>
</div>