<div class="mt-4">
    <h3>Cập nhật video</h3>

    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên Video</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="descript">Mô tả</label>
            <textarea class="form-control" id="descript" name="descript">{{course.descript}}</textarea>
        </div>
        <div class="form-group">
            <label for="video">Video ID</label>
            <input type="text" class="form-control" value="{{course.video}}" id="video" name="video">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>